from tkinter import *

raizPrincipal=Tk()
raizPrincipal.config(bg="#e7593b")
                     
framePrincipal=Frame()
framePrincipal.pack(expand=True, fill="both")
framePrincipal.config(bg="orange",width=400,height=200)

#raizPrincipal.grid_columnconfigure(1,weight = 1)
#raizPrincipal.grid_rowconfigure(1,weight = 1)

framePrincipal.grid_columnconfigure(1,weight = 1)
framePrincipal.grid_rowconfigure(1,weight = 1)




saludo = Label(framePrincipal, text= "Bienvenidos a nuestro programa",anchor="center")
saludo.grid(row=1,column=1,padx=20,pady=20,)
#saludo.grid_columnconfigure(0,weight = 1)
#saludo.grid_rowconfigure(0,weight = 1)
saludo1 = saludo = Label(framePrincipal, text= "Elige la opci√≥n que quieres usar",anchor="se")
saludo1.grid(row=2,column=1, padx=10)
#saludo1.grid_columnconfigure(1,weight = 1)
#saludo1.grid_rowconfigure(1,weight = 1)

botonFlashcard=Button(framePrincipal, text="Crear Flashcards")
botonFlashcard.grid(row=3,column=1)

botonQuiz=Button(framePrincipal, text="Crear un Quizz")
botonQuiz.grid(row=4,column=1,pady=20,sticky="n")


raizPrincipal.mainloop()
